   <!ENTITY soupa  "http://pervasive.semanticweb.org/ont/2004/06/">
   <!ENTITY rdf    "http://www.w3.org/1999/02/22-rdf-syntax-ns#">
   <!ENTITY rdfs   "http://www.w3.org/2000/01/rdf-schema#">
   <!ENTITY xsd    "http://www.w3.org/2001/XMLSchema#"> 
   <!ENTITY owl    "http://www.w3.org/2002/07/owl#"> 
   <!ENTITY tme    "http://pervasive.semanticweb.org/ont/2004/01/time#">
   <!ENTITY geom   "http://pervasive.semanticweb.org/ont/2004/06/geo-measurement#">
   <!ENTITY pol    "http://pervasive.semanticweb.org/ont/2004/06/policy#">
   <!ENTITY spc    "http://pervasive.semanticweb.org/ont/2004/06/space#">   
   ]>
